<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>	
		
<div class="container">
  <h2>Edit Huntgroup</h2>
<% if (messages.error) { %>
        <p class="bg-danger"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
        <p class="bg-success"><%- messages.success %></p>
<% } %>
  <form class="form-horizontal" action="/huntgroups/edit<%= id %>" method="post" name="form1">
    <div class="form-group">
      <label class="control-label col-sm-2" for="username">Group Name:</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" name=group_name" value="<%= group_name %>" >
       </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="nas_ip">NAS IP:</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" name="nas_ip" id="nas_ip" value="<%= nas_ip %>" >
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2" for="nas_ip">NAS Port:</label>
      <div class="col-sm-3">
        <input type="text" class="form-control" name="nas_port" id="nas_port" value="<%= nas_port %>" >
      </div>
    </div>



    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
       <input type="submit" class="btn btn-primary btn-md" name="Submit" value="Edit" />
      </div>
    </div>
   <input type="hidden" name="_method" value="PUT" />
  </form>
</div>

<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>
